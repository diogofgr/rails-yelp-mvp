<div class="container">
  <div class="row">
    <div class="col-xs-12">

      <%= simple_form_for(@restaurant) do |f| %>
        <%= f.error_notification %>
        <%= f.input :name, placeholder: "Chez Miguel" %>
        <%= f.input :address, placeholder: "13 Berlin Av.,Lisbon" %>
        <%= f.input :phone_number, placeholder: "+351-949-434-555" %>
        <%= f.input :category, placeholder: "italian" %>
        <%= f.submit "Create", class: "btn btn-primary" %>
      <% end %>

    </div>
  </div>
</div>
